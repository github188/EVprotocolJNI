<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    
    
    
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    	          
        <TextView 
		    android:id="@+id/textView_cabinet"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="柜号:"/>
        
        <EditText
            android:id="@+id/editText_cabinet"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="1"/>
        
         <TextView 
		    android:id="@+id/textView_column"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="货道号:"/>
        
         <EditText
            android:id="@+id/editText_column"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="11" />
    </LinearLayout>
    
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    	 <TextView 
		    android:id="@+id/textView_paymode"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="支付方式:"/>
    	 <RadioGroup
    	     android:orientation="vertical"
    	     android:layout_width="match_parent" android:layout_height="wrap_content"
    	     android:layout_weight="1"
    	     android:text="支付方式:"
    	     >
    	     
    	     <RadioButton
    	        android:id="@+id/radioButton_money"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="现金:"></RadioButton> 
				
    	      <RadioButton
    	        android:id="@+id/radioButton_pc"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="PC出货:"></RadioButton> 
    	     
    	     </RadioGroup>
   	    <TextView 
	    android:id="@+id/textView_cost"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="扣款金额:"/>
    	    
         <EditText
            android:id="@+id/editText_cost"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="00" />
    	     
    </LinearLayout>
    
     <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        
      	<Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="确认"></Button>
    	<Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="取消"></Button>
     </LinearLayout>
    
    

</LinearLayout>
